<% @plans.each do |p| %>
  <div>
    <%= p.name %>
    <%= number_to_currency(p.price / 100) %> / year
    <%= form_tag("/charges/create", method: "post") do %>
      Auto_bill? <%= check_box_tag "auto_bill", true, true %>
      <%= hidden_field_tag(:plan_id, p.id) %>
      <%= hidden_field_tag(:plan_stripe_id, p.plan_stripe_id) %>
      <script
        src="https://checkout.stripe.com/checkout.js" class="stripe-button"
        data-key="<%= ENV["STRIPE_KEY"] %>"
        data-panel-label="Complete Purchase"
        data-label="Purchase"
        data-allow-remember-me="false"
        data-name="The Pacific Club"
        data-description="<%= p.name %>"
        data-amount="<%= p.price %>"
        data-email="<%= current_user.email %>"
        data-locale="auto">
      </script>
    <% end %>
  </div>
<% end %>